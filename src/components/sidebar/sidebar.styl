$aside-bg = #2B2F3E
$aside-heading-color = #6B6D7C
  
sidebar
  width 270px
  background-color $aside-bg
  
  h1
    font-size 36px
    font-weight 300
    margin 14px 0 0 27px
    letter-spacing 1px
    color $aside-heading-color
    
  ul
    padding 0
    margin 65px 0 0 0
    width 100%
    li
      width 100%
      height 55px
      line-height 55px
      color white
      font-size 18px
      padding-left 28px
      cursor pointer
      &.active
        background linear-gradient(to bottom, #FF496F, #FF404B)
        
  @media screen and (max-width: 1023px)
    width 100%
    height auto
    padding-bottom 25px